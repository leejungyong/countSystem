/* pages/index/purpose.wxss */
.title{
  font-size: 30rpx;
  color: #b2b2b2;
  padding-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.list{
  overflow-y: scroll;
  position: absolute;
  top: 80rpx;
  bottom: 180rpx;
  left: 0;
  width: 100%;
  padding-left: 32rpx;
  box-sizing: border-box;
}
.list .item{
  /* padding: 22rpx; */
  border-top: 1rpx solid #e9e8e5;
}
.list .item:first-child{
  border-top: none;
}
.list .item:last-child{
  border-bottom: 1rpx solid #e9e8e5;
}
.list .item .name{
  display: inline-block;
  padding-left: 40rpx;
  box-sizing: border-box;
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
}
.list .item .check{
  display: inline-block;
  width: 20%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.minibox{
  display: inline-block;
  vertical-align: middle;
  /* width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #b2b2b2;
   */
}
.checked::before{
  width: 16rpx;
  height: 36rpx;
  border-color: #d8a163;
  border-style: solid;
  border-width: 0 8rpx 8rpx 0;
  transform: rotate(45deg);
  content: "";
  display: inline-block;
  position: relative;
}
