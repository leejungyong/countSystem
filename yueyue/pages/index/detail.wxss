/* pages/index/detail.wxss */
page{
    background: #F3F3F3;
    color: #333;
}
.detail-wrap{
    padding: 20rpx ;

}
.common-wrap{
    margin: 20rpx 0;
}
.title{
    display: flex;
    align-items: center;
    padding-left: 10rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}
.value-wrap {
}
 .item{
    padding: 0 40rpx;
    background: #fff;
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
}
.value-wrap .name{
    width: 270rpx;
}
.value-wrap .price{
}
.total-wrap{
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    padding-right:10rpx ;
    font-size: 34rpx;
    margin-top: 40rpx;
}
.total{
    font-size: 30rpx;
}
.btn{
    background: #d8a163;
    color: #fff;
    text-align: center;
    width: 670rpx;
    height:88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    margin: 30rpx auto;
}

.img-mask-wrap{
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background:rgba(15,15,15,0.6);
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.small-btn{
    background: #d8a163;
    color: #fff;
    text-align: center;
    width: 400rpx;
    height:88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    margin: 30rpx auto;
}
