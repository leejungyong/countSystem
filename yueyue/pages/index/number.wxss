}
.input-wrap{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  border-bottom:2rpx solid #e5e5e5;
  padding: 22rpx 0 20rpx 0;
}
.title {
  /* height: 88rpx; */
  width: 120rpx;
}
.title::before{
  content: '*';
  color: red;
}
.input {
  font-size: 32rpx;
  flex: 1;
  color: #666;
}
.pl {
  color: #b2b2b2;
}
.total-price {
  margin-top: 40rpx;
  color: #333;
}
.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
}
